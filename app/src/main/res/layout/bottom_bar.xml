<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:background-color="http://schemas.android.com/tools"
    android:background="@drawable/clearsky"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    android:id="@+id/bottom_bar"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <CheckBox
        android:id="@+id/cb_multimarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/relativeLayout"
        android:text="Multi marker"
        android:textColor="#fff"
        android:checked="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Bangalore"
        android:textColor="#fff"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginStart="21dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/relativeLayout"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="India"
        android:textColor="#fff"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView17"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="Pressure"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="199dp"
        android:text="Humidity"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="13dp"
        android:text="Temp_min"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="13dp"
        android:text="Temp_max"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="12dp"
        android:text="Longitude"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="16dp"
        android:text="Latitude"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/textView17"
        android:text="1015"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@+id/textView10"
        android:text="57"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_alignTop="@+id/textView9"
        android:text="27"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
