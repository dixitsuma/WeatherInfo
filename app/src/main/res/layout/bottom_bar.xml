        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/textView20"
        android:text="12.98"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView16"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="14dp"
        android:text="23"
        android:textColor="#fff"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/textView17"
        android:text="C"
        android:textColor="#fff"
        android:textSize="65dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/textView6"
        android:src="@drawable/ic_deg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="14dp"
        android:text="Description"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView21"
        android:layout_alignTop="@+id/textView"
        android:text="Clear sky"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/cb_multimarker"
        android:layout_alignStart="@+id/textView16"
        app:srcCompat="@drawable/bb_bottom_bar_top_shadow" />

    <ImageView
        android:id="@+id/iv_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_toEndOf="@+id/textView17"
        android:src="@drawable/ic_direction"/>

    <Button
        android:id="@+id/btn_inst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_below="@+id/textView"
        android:layout_marginTop="24dp"
        android:background="#fff"
        android:text="Instructions"
        android:textColor="#000" />

    <Button
        android:id="@+id/btn_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/btn_inst"
        android:background="#fff"
        android:text="  Addresses "
        android:textColor="#000" />


</RelativeLayout>